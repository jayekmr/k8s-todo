pipeline {
    agent any

    environment {
        AWS_REGION  = 'ap-southeast-2'
        CLUSTER_NAME = 'my-eks-cluster'
        IMAGE_NAME  = 'jayekmr/go-todo'
        K8S_DIR     = 'k8s'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/jayekmr/k8s-todo.git',
                    credentialsId: 'github-cred'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    def dockerImage = docker.build("${IMAGE_NAME}:latest",".server")
                    env.IMAGE_TAG = "${IMAGE_NAME}:latest"
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-cred-id') {
                        sh "docker push ${env.IMAGE_TAG}"
                    }
                }
            }
        }

        stage('Configure AWS & kubeconfig') {
            steps {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding', credentialsId: 'aws-eks-credentials-id']]) {
                    sh """
                      aws configure set aws_access_key_id \$AWS_ACCESS_KEY_ID
                      aws configure set aws_secret_access_key \$AWS_SECRET_ACCESS_KEY
                      aws configure set default.region ${AWS_REGION}
                      aws eks --region ${AWS_REGION} update-kubeconfig --name ${CLUSTER_NAME}
                    """
                }
            }
        }

        stage('Deploy Kubernetes Manifests') {
            steps {
                sh """
                  kubectl apply -f ${K8S_DIR}/pv.yaml
                  kubectl apply -f ${K8S_DIR}/pvc.yaml
                  kubectl apply -f ${K8S_DIR}/mysql-secret.yaml
                  kubectl apply -f ${K8S_DIR}/mysql-deployment.yaml
                  kubectl apply -f ${K8S_DIR}/todo-configmap.yaml
                  kubectl apply -f ${K8S_DIR}/todo-deployment.yaml
                  kubectl apply -f ${K8S_DIR}/go-app-hpa.yaml
                """
            }
        }

        stage('Update Deployment Image') {
            steps {
                script {
                    sh """
                      set -e
                      TARGET_IMAGE='${IMAGE_NAME}:latest'
                      echo "Searching for a deployment that references image repository '${IMAGE_NAME}'..."

                      DEPLOY=""
                      # get deployment names
                      for name in \$(kubectl get deployments -o jsonpath='{.items[*].metadata.name}' 2>/dev/null || true); do
                        imgs=\$(kubectl get deployment "\$name" -o jsonpath='{.spec.template.spec.containers[*].image}' 2>/dev/null || true)
                        if echo "\$imgs" | grep -q "${IMAGE_NAME}"; then
                          DEPLOY="\$name"
                          break
                        fi
                      done

                      if [ -z "\$DEPLOY" ]; then
                        echo "No deployment found referencing ${IMAGE_NAME}. Falling back to 'todo-app'."
                        DEPLOY='todo-app'
                      else
                        echo "Found deployment: \$DEPLOY"
                      fi

                      # get first container name
                      CONTAINER=\$(kubectl get deployment "\$DEPLOY" -o jsonpath='{.spec.template.spec.containers[0].name}' 2>/dev/null || true)
                      if [ -z "\$CONTAINER" ]; then
                        echo "ERROR: Could not determine container name for deployment '\$DEPLOY'."
                        kubectl get deployments -o wide || true
                        exit 1
                      fi

                      echo "Updating deployment '\$DEPLOY' container '\$CONTAINER' to image ${IMAGE_NAME}:latest"
                      kubectl set image deployment/"\$DEPLOY" "\$CONTAINER"=${IMAGE_NAME}:latest
                    """
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                sh 'kubectl get pods -o wide'
                sh 'kubectl get svc -o wide'
            }
        }
    }

    post {
        success { echo "✅ Deployment successful!" }
        failure { echo "❌ Deployment failed. Check logs." }
    }
}
