pipeline {
    agent any

    environment {
        AWS_REGION   = 'ap-southeast-2'
        CLUSTER_NAME = 'my-eks-cluster'

        GO_IMAGE     = 'jayekmr/go-todo'
        FE_IMAGE     = 'jayekmr/react-frontend'
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/jayekmr/k8s-todo.git',
                    credentialsId: 'github-cred'
            }
        }

        stage('Build Backend Image') {
            steps {
                script {
                    docker.build("${GO_IMAGE}:latest", "./server")
                }
            }
        }

        stage('Build Frontend Image') {
            steps {
                script {
                    docker.build("${FE_IMAGE}:latest", "./ui")
                }
            }
        }

        stage('Push Images to DockerHub') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub-cred-id') {
                        sh "docker push ${GO_IMAGE}:latest"
                        sh "docker push ${FE_IMAGE}:latest"
                    }
                }
            }
        }

        stage('Configure EKS Access') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'aws-eks-credentials-id'
                ]]) {
                    sh '''
                      aws eks update-kubeconfig \
                      --region $AWS_REGION \
                      --name $CLUSTER_NAME

                      kubectl get nodes
                    '''
                }
            }
        }

 

        stage('Update Images in Deployments') {
            steps {
                sh '''
         kubectl set image deployment/go-app-deployment \
go-app=${GO_IMAGE}:latest


                  kubectl set image deployment/react-frontend-deployment \
                  react-frontend=${FE_IMAGE}:latest
                '''
            }
        }

        stage('Verify Deployment') {
            steps {
                sh '''
                  kubectl get pods -o wide
                  kubectl get svc
                '''
            }
        }
    }

    post {
        success {
            echo "✅ Full stack app deployed to AWS EKS"
        }
        failure {
            echo "❌ Deployment failed. Check logs."
        }
    }
}
